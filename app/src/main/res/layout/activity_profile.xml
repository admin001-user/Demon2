<?xml version="1.0" encoding="utf-8"?>
<!-- 个人中心布局：顶部信息区 + 功能项列表 + 退出登录按钮 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 顶部信息区：头像+昵称+签名 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#2196F3"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@drawable/circle_bg"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎来到信息App"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 功能项：个人信息 -->
    <LinearLayout
        android:id="@+id/rowProfile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F5F7FA"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/person_information"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="个人信息" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />

    <!-- 功能项：我的收藏 -->
    <LinearLayout
        android:id="@+id/rowFavorites"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F5F7FA"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/my_save"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的收藏" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />

    <!-- 功能项：浏览历史 -->
    <LinearLayout
        android:id="@+id/rowHistory"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F5F7FA"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/history"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="浏览历史" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />

    <!-- 功能项：设置 -->
    <LinearLayout
        android:id="@+id/rowSettings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#F5F7FA"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/setting"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设置" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />

    <!-- 功能项：关于我们 -->
    <LinearLayout
        android:id="@+id/rowAbout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#F5F7FA"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/about_us"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关于我们" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />

    <!-- 功能项：意见反馈 -->
    <LinearLayout
        android:id="@+id/rowFeedback"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F5F7FA"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/suggest"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="意见反馈" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />

    <!-- 退出登录按钮 -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="退出登录"
        android:layout_margin="16dp"
        android:backgroundTint="#F44336"
        android:textColor="@android:color/white" />

</LinearLayout>
